<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proj.fivesecrule.GameActivity"
    android:background="@drawable/background_picture"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="267dp"
        android:layout_height="95dp"
        android:fontFamily="@font/share_tech_mono"
        android:gravity="center"
        android:text="@string/Timer"
        android:textColor="@color/grey"
        android:textSize="90sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:fontFamily="@font/alegreya_sans"
        android:gravity="center_horizontal"
        android:text="@string/Question_Bar"
        android:textColor="@color/grey"
        android:textSize="42sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:fontFamily="@font/oswald_bold"
        android:textColor="@color/grey"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:onClick="Answer_Button"
        android:text="@string/stop_botton"
        android:textSize="36sp"
        android:background="@drawable/green_button"
        android:textColor="@color/darkAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"/>

    <Button
        android:id="@+id/change_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:alpha="0.4"
        android:background="@drawable/ic_back"
        android:onClick="Change_points"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</androidx.appcompat.widget.LinearLayoutCompat>