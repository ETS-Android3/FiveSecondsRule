<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proj.fivesecrule.MainActivity"
    android:background="@drawable/background_picture"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="157dp"
        android:layout_height="147dp"
        android:layout_gravity="center_horizontal"
        android:tint="?android:attr/textColorSecondaryInverse"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:srcCompat="@drawable/intro_logo"
        tools:ignore="VectorDrawableCompat"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:textSize="35sp"
        android:fontFamily="@font/oswald_bold"
        android:onClick="startOneOnOne"
        android:text="@string/main_play1on1"
        android:textColor="@color/ic_launcher_background"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="startTeamGame"
        android:text="@string/main_teamplay"
        android:background="@null"
        android:textSize="29sp"
        android:fontFamily="@font/oswald_bold"
        android:textColor="@color/ic_launcher_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/button_rules"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:textSize="29sp"
        android:fontFamily="@font/oswald_bold"
        android:onClick="Rules_button"
        android:text="@string/Rules"
        android:textColor="@color/ic_launcher_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</androidx.appcompat.widget.LinearLayoutCompat>