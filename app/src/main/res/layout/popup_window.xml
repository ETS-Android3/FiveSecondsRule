<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/popup_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_view">
            <TextView
                android:id="@+id/text_of_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/FullRules"
                android:textSize="22sp"
                android:textColor="@color/darkAccent"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="1.0" />

            <TextView
                android:id="@+id/text_of_rules_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_of_rules"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="1.0"
                android:text="@string/RulesPlayers"
                android:textColor="@color/darkAccent"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_of_rules_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_of_rules_players"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="1.0"
                android:text="@string/RulesMain"
                android:textColor="@color/darkAccent"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_of_rules_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_of_rules_main"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="1.0"
                android:text="@string/RulesEnd"
                android:textColor="@color/darkAccent"
                android:textSize="22sp" />
            <Button
                android:id="@+id/button9"
                android:layout_below="@+id/text_of_rules_end"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:text="@string/Back"
                android:textColor="@color/darkAccent"
                />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>