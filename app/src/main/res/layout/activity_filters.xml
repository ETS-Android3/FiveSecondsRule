<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proj.fivesecrule.FiltersActivity"
    android:background="@drawable/background_picture">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:text="@string/WinPoints"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="@string/Fine"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/button5"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="More_Button"
        android:textSize="30sp"
        android:text="@string/MorePoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_button_white"
        android:textColor="@color/darkAccent"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/DefaultPoints"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:onClick="Less_Button"
        android:text="@string/LessPoints"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_button_white"
        android:textColor="@color/darkAccent"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textColorHint="@color/ic_launcher_background"
        android:textColor="@color/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:onClick="Next_Button"
        android:text="@string/Next_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button_white"
        android:textColor="@color/darkAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>